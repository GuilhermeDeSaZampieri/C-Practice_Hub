
# Configuração principal do Replit
[run]
command = "gcc C-Pilha/mainFile.c C-Pilha/pilha.c -o main && ./main"

[workflows]
runButton = "C-Pilha"   # Define qual projeto roda ao clicar em "Run"

# Workflow para C-Pilha
[[workflows.workflow]]
name = "C-Pilha"
author = "agent"
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gcc C-Pilha/mainFile.c C-Pilha/pilha.c C-Pilha/TestePilhasFunctions.c C-Pilha/OrdenacaoCresc.c C-Pilha/OrdenacaoDec.c C-Pilha/InverterLetra.c -o main && ./main"

